{
    "name": "singularo/stratos-drupal-project",
    "description": "Project template for StratosERP",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Simon Lindsay (singularo)",
            "role": "Developer"
        }
    ],
    "repositories": [
        { "type": "composer", "url": "https://packages.drupal.org/8" },
        { "type": "composer", "url": "https://asset-packagist.org" },
        { "type": "vcs", "url": "https://github.com/singularo/shepherd-drupal-scaffold.git" },
        { "type": "path", "url": "~/projects/stratoserp/stratoserp_base" },
        { "type": "path", "url": "~/projects/iseek/shop/web/modules/custom/stratoserp" },
        { "type": "path", "url": "~/projects/iseek/shop/web/themes/custom/stratoserp_theme" }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-posix": "*",
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6.5",
        "drupal/core": "^9",
        "drupal/core-composer-scaffold": "^9",
        "drupal/core-recommended": "^9",
        "drupal/stratoserp": "dev-develop",
        "drush/drush": "dev-master",
        "drupal/bootstrap4": "^2.0",
        "singularo/stratoserp_base": "dev-develop",
        "singularo/shepherd-drupal-scaffold": "dev-develop",
        "vlucas/phpdotenv": "^5",
        "webflo/drupal-finder": "^1.0.0",
        "zaporylie/composer-drupal-optimizations": "^1.0"
    },
    "require-dev": {
        "drupal/core-dev": "^9"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "discard-changes": true,
        "platform": {
            "php": "7.4"
        },
        "sort-packages": true
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            },
            "allowed-packages": [
                "singularo/shepherd-drupal-scaffold"
            ]
        },
        "installer-types": [
            "bower-asset",
            "npm-asset",
            "library"
        ],
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset",
                "harvesthq/chosen"
            ],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"]
        },
        "preserve-paths": [
            "web/sites"
        ],
        "patches": {
            "drupal/chosen": {
                "Chosen field should force height to auto": "https://www.drupal.org/files/issues/Issue-2839655-by-hass-Chosen-field-should-force-heig.patch"
            },
            "drupal/dynamic_entity_reference": {
                "Allow users to select a bundle": "https://www.drupal.org/files/issues/2018-10-28/dynamic_entity_reference-select-per_bundle-2381991-9.patch"
            },
            "drupal/extra_field": {
                "Allow form extra fields to be declared through ExtraField plugins": "https://www.drupal.org/files/issues/2019-01-17/extra_field-using_in_forms-2882061-24.patch"
            }
        },
        "patchLevel": {
            "drupal/core": "-p2"
        }
    }
}
